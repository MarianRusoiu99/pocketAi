# ===========================================
# PocketBase + TypeScript + Rivet Configuration
# ===========================================

# Application Environment
NODE_ENV=development
APP_NAME=PocketBase TypeScript App
APP_VERSION=1.0.0

# ===========================================
# PocketBase Configuration
# ===========================================
POCKETBASE_PORT=8090
POCKETBASE_HOST=127.0.0.1

# ===========================================
# Frontend Configuration
# ===========================================
FRONTEND_PORT=5173
FRONTEND_HOST=localhost
VITE_API_URL=http://localhost:8090

# ===========================================
# Backend TypeScript Configuration
# ===========================================
LOG_LEVEL=info
API_PREFIX=/api/v1

# ===========================================
# Rivet Workflow Integration
# ===========================================
RIVET_API_URL=http://localhost:3000
RIVET_API_KEY=
RIVET_PROJECT_PATH=./rivet/project.rivet
RIVET_TIMEOUT=30000
RIVET_RETRY_ATTEMPTS=3

# Rivet Workflow Names
RIVET_WORKFLOW_CONTENT_PROCESSOR=content-processor
RIVET_WORKFLOW_USER_ANALYTICS=user-analytics
RIVET_WORKFLOW_CONTENT_MODERATION=content-moderation

# ===========================================
# Database Configuration
# ===========================================
DB_ENABLE_MIGRATIONS=true
DB_ENABLE_BACKUPS=true
DB_BACKUP_INTERVAL=24h
DB_MAX_BACKUPS=7

# ===========================================
# Feature Flags
# ===========================================
FEATURE_WEBHOOKS=true
FEATURE_NOTIFICATIONS=true
FEATURE_FILE_UPLOADS=true
FEATURE_REALTIME=true
FEATURE_ANALYTICS=false
FEATURE_RIVET_INTEGRATION=true

# ===========================================
# Security (for production)
# ===========================================
# JWT_SECRET=your-super-secret-jwt-key
# ADMIN_EMAIL=admin@yourapp.com
# ADMIN_PASSWORD=your-secure-password
