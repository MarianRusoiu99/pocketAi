{
  "name": "pocketbase-rivet-backend",
  "version": "1.0.0",
  "description": "PocketBase backend with Rivet AI workflow integration",
  "main": "pb_hooks/main.pb.js",
  "scripts": {
    "serve": "./pocketbase serve --http=127.0.0.1:8090 --dir=./pb_data --hooksDir=./pb_hooks",
    "serve:prod": "./pocketbase serve --http=0.0.0.0:8090 --dir=./pb_data --hooksDir=./pb_hooks",
    "serve:dev": "./pocketbase serve --http=127.0.0.1:8090 --dir=./pb_data --hooksDir=./pb_hooks --dev",
    "rivet:test": "npx @ironclad/rivet-cli run ../rivet/ai.rivet-project --input test=hello",
    "rivet:run": "npx @ironclad/rivet-cli run ../rivet/ai.rivet-project",
    "download": "node scripts/download-pocketbase.js",
    "setup": "npm install && npm run download",
    "clean": "rm -rf pb_data/backups/* && rm -f *.log"
  },
  "dependencies": {
    "@ironclad/rivet-cli": "^1.25.0",
    "@ironclad/rivet-node": "^1.25.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.1"
  },
  "keywords": [
    "pocketbase",
    "rivet",
    "ai",
    "workflow",
    "javascript"
  ],
  "author": "",
  "license": "MIT"
}
