# ===========================================
# PocketBase + TypeScript + Rivet Configuration
# ===========================================

# Application Environment
NODE_ENV=development
APP_NAME=PocketBase TypeScript App
APP_VERSION=1.0.0
LOG_LEVEL=info
API_PREFIX=/api/v1

# ===========================================
# Rivet HTTP Server Configuration
# ===========================================
# URL where Rivet HTTP server is running
RIVET_SERVER_URL=http://localhost:3010
# Timeout for workflow execution (milliseconds)
RIVET_TIMEOUT=30100
# Number of retry attempts for failed workflows
RIVET_RETRY_ATTEMPTS=3

# Common Rivet workflow/graph names (customize based on your project)
RIVET_WORKFLOW_CONTENT_PROCESSOR=content-processor
RIVET_WORKFLOW_USER_ANALYTICS=user-analytics
RIVET_WORKFLOW_CONTENT_MODERATION=content-moderation

# ===========================================
# Database Configuration
# ===========================================
DB_ENABLE_MIGRATIONS=true
DB_ENABLE_BACKUPS=true
DB_BACKUP_INTERVAL=24h
DB_MAX_BACKUPS=7

# ===========================================
# Feature Flags
# ===========================================
FEATURE_WEBHOOKS=true
FEATURE_NOTIFICATIONS=true
FEATURE_FILE_UPLOADS=true
FEATURE_REALTIME=true
FEATURE_ANALYTICS=false
FEATURE_RIVET_INTEGRATION=true

# ===========================================
# OpenAI Configuration (for Rivet workflows)
# ===========================================
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_ORGANIZATION=your-organization-id
# OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
