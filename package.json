{
  "name": "pocket-typescript-app",
  "version": "1.0.0",
  "description": "PocketBase TypeScript application with React frontend and Rivet integration",
  "private": true,
  "workspaces": ["client", "backend"],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd client && npm run dev",
    "dev:backend": "./scripts/dev.sh",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd client && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "./scripts/start.sh",
    "test": "./scripts/test.sh",
    "test:verbose": "./scripts/test.sh",
    "lint": "cd backend && npm run lint",
    "typecheck": "cd backend && npm run typecheck",
    "clean": "./scripts/clean.sh",
    "setup": "./scripts/setup.sh",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
