{
  "name": "pocket-go-app",
  "version": "1.0.0",
  "description": "Full-stack application with React frontend and PocketBase Go backend",
  "private": true,
  "workspaces": ["frontend"],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "go run ./cmd/server",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "go build -o pocket-app ./cmd/server",
    "start": "./pocket-app serve",
    "test": "go test ./...",
    "test:verbose": "go test -v ./...",
    "lint": "golangci-lint run",
    "clean": "rm -f pocket-app && cd frontend && npm run clean",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "go": ">=1.21.0"
  }
}
